<UserControl
    x:Class="CardLearnApp.DataPresentation.CardEditorNode"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:CardLearnApp.DataPresentation"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="200"
    d:DesignWidth="300">

    <StackPanel Background="{StaticResource SystemControlBackgroundBaseLowRevealBackgroundBrush}" CornerRadius="5" Margin="10">
        <StackPanel.ContextFlyout>
            <MenuFlyout>
                <MenuFlyoutItem Click="RemoveSelfClicked" Text="Remove"/>
            </MenuFlyout>
        </StackPanel.ContextFlyout>
        <TextBox x:Name="FrontSide" HorizontalAlignment="Left" Width="250" Header="Front Side" VerticalAlignment="Top" Margin="10" TextChanged="FrontSideTextChanged"/>
        <TextBox x:Name="BackSide" HorizontalAlignment="Left" Width="250" Header="Back Side" VerticalAlignment="Top" Margin="10" TextChanged="BackSideTextChanged"/>
    </StackPanel>
</UserControl>